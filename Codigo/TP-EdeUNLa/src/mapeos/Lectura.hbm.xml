<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-mapping>
	<class name="datos.Lectura" table="lectura">
		<id column="idLectura" name="idLectura">
			<generator class="identity" />
		</id>
		<property column="fechaHoraLectura" name="fechaHoraLectura" type="string" />


		<one-to-one name="inspector" class="datos.Inspector"></one-to-one>

		<many-to-one name="medidor" class="datos.Medidor"></many-to-one>

		<joined-subclass name="datos.LecturaAltaDemanda" table="lecturaaltademanda">
			<key column="idLecturaAltaDemanda" />
			<property column="tipoTension" name="tipoTension" type="string" />
			<property column="consumoHorasPico" name="consumoHorasPico" type="float" />
			<property column="consumoHorasValle" name="consumoHorasValle" type="float" />
			<property column="consumoHorasResto" name="consumoHorasResto" type="float" />
		</joined-subclass>
		
		<joined-subclass name="datos.LecturaBajaDemanda" table="lecturabajademanda">
			<key column="idLecturaBajaDemanda" />
			<property column="consumo" name="consumo" type="double" />
		</joined-subclass>
		
		
	</class>
</hibernate-mapping>	