<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-mapping>
<class name="datos.Tarifario" table="tarifario">
		<id column="idTarifario" name="idTarifario">
			<generator class="identity" />
		</id>
		
		<property name="montoFijo" column="montoFijo" type="double" />
		<property name="fechaActualizacion" column="fechaActualizacion" type="LocalDate" />
		<property name="estaActivo" column="estaActivo" type="boolean" />
		
		<set name="facturas" table="factura" inverse="true" lazy="true" fetch="select">
			<key column="idTarifario" not-null="true" />
			<one-to-many class="datos.ItemFactura" />
		</set>
		
		
		<joined-subclass name="datos.TarifarioAltaDemanda" table="tarifarioaltademanda">
			<key column="idTarifarioAltaDemanda" />
			<property column="montoVariablePico" name="montoVariablePico" type="double" />
			<property column="montoVariableValle" name="montoVariableValle" type="double" />
			<property column="montoVariableResto" name="montoVariableResto" type="double" />
		</joined-subclass>
		
		
		
		<joined-subclass name="datos.TarifarioBajaDemanda" table="tarifariobajademanda">
			<key column="idTarifarioBajaDemanda" />
			<property column="montoVariable" name="montoVariable" type="double" />
		</joined-subclass>
		
		
	
		
</class>
</hibernate-mapping>